<div class="bg-nordik-bg min-h-screen py-16 px-6">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-20">
      <span class="block text-xs font-bold text-nordik-accent tracking-[0.3em] uppercase mb-4">Portfolio</span>
      <h1 class="text-4xl md:text-5xl font-sans font-light tracking-[0.1em] text-nordik-primary uppercase mb-6">
        Selected Works
      </h1>
      <div class="h-0.5 w-16 bg-nordik-accent mx-auto"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-10 gap-y-16">

      <% @projects.each do |project| %>
        <%= link_to project_path(project), class: "group block" do %>
          <div class="bg-transparent">

            <div class="relative h-96 w-full overflow-hidden rounded-[2rem] shadow-sm group-hover:shadow-xl transition-all duration-500 ease-out mb-6">

              <% if project.image.attached? %>
                <%= image_tag project.image, class: "w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-1000 ease-in-out" %>
              <% else %>
                <div class="w-full h-full bg-nordik-white flex items-center justify-center text-nordik-secondary text-xs tracking-widest border border-nordik-accent/10">
                  NO IMAGE
                </div>
              <% end %>

              <div class="absolute inset-0 bg-nordik-primary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>

            <div class="text-center px-4">
              <h2 class="text-lg font-sans font-bold tracking-[0.2em] text-nordik-primary uppercase mb-2 group-hover:text-nordik-accent transition-colors duration-300">
                <%= project.title %>
              </h2>              <p class="text-xs text-nordik-secondary font-light line-clamp-2 leading-relaxed max-w-xs mx-auto">
                <%= project.description %>
              </p>

              <div class="mt-4 opacity-0 transform translate-y-2 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500">
                <span class="text-[10px] font-bold tracking-[0.2em] text-nordik-accent uppercase border-b border-nordik-accent pb-1">
                  View Case Study
                </span>
              </div>
            </div>

          </div>
        <% end %>
      <% end %>

    </div>

    <% if @projects.empty? %>
      <div class="text-center py-20">
        <p class="text-nordik-secondary text-sm tracking-widest">No projects found yet.</p>
        <%= link_to "Go to Admin to Create", admin_path, class: "text-nordik-accent underline mt-2 inline-block text-xs uppercase tracking-widest" %>
      </div>
    <% end %>

  </div>
</div>