<div class="bg-[#0a0a0a] min-h-screen py-12 px-8">
  <div class="max-w-5xl mx-auto">

    <div class="flex justify-between items-end mb-12">
      <div>
        <h1 class="text-2xl font-light tracking-[0.4em] uppercase text-white">Project <span class="text-[#c5a367]">Control</span></h1>
        <p class="text-[10px] text-gray-500 uppercase tracking-widest mt-2">Manage your architectural portfolio</p>
      </div>
      <%= link_to "+ New Project", new_project_path, class: "text-[10px] font-bold uppercase tracking-widest bg-[#c5a367] text-black px-6 py-3 hover:bg-white transition-all rounded-full" %>
    </div>

    <div class="space-y-4">
      <% @projects.each do |project| %>
        <div class="group flex items-center justify-between p-6 border border-white/5 hover:border-[#c5a367]/30 bg-[#111]/50 transition-all">

          <div class="flex items-center space-x-6">
            <div class="w-16 h-16 bg-[#222] overflow-hidden rounded-lg border border-white/10">
              <% if project.images.attached? %>
                <%= image_tag project.images, class: "w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all" %>
              <% end %>
            </div>
            <div>
              <h2 class="text-sm font-light uppercase tracking-widest text-white"><%= project.title %></h2>
              <span class="text-[9px] text-gray-600 uppercase tracking-tighter">Created: <%= project.created_at.strftime("%B %d, %Y") %></span>
            </div>
          </div>

          <div class="flex space-x-8 opacity-40 group-hover:opacity-100 transition-opacity">
            <%= link_to "Edit", edit_project_path(project), class: "text-[10px] uppercase tracking-widest text-gray-400 hover:text-[#c5a367]" %>
            <%= button_to "Delete", project_path(project), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } },class: "text-red-500" %>
          </div>

        </div>
      <% end %>

      <% if @projects.empty? %>
        <div class="py-20 text-center border border-dashed border-white/10">
          <p class="text-gray-600 text-[10px] uppercase tracking-widest">No projects in the collection yet.</p>
        </div>
      <% end %>
    </div>

    <div class="mt-12 pt-8 border-t border-white/5">
      <%= link_to "Logout", logout_path, data: { turbo_method: :delete }, class: "text-[9px] uppercase tracking-[0.3em] text-gray-700 hover:text-red-500 transition" %>
    </div>
  </div>
</div>