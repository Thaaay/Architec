<div class="flex justify-between items-center mb-8">
  <h1 class="text-2xl font-bold text-gray-700">Meus Projetos</h1>
  <%= link_to "+ Novo Projeto", new_project_path, class: "bg-nordik-accent hover:bg-nordik-primary text-black font-bold py-2 px-6 rounded-lg shadow transition duration-300 uppercase text-xs tracking-widest" %>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <table class="min-w-full leading-normal">
    <thead>
      <tr>
        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
          Capa
        </th>
        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
          Título
        </th>
        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-50 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
          Ações
        </th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr class="hover:bg-gray-50 transition">
          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm w-32">
            <div class="flex-shrink-0 w-20 h-14 bg-gray-100 rounded overflow-hidden relative">
              <% if project.image.attached? %>
                <%= image_tag project.image, class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-xs text-gray-400">Sem Foto</div>
              <% end %>
            </div>
          </td>
          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
            <p class="text-gray-900 whitespace-no-wrap font-medium">
              <%= project.title %>
            </p>
            <p class="text-gray-500 text-xs truncate w-64 mt-1"><%= project.description %></p>
          </td>
          <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
            <div class="flex space-x-3">
              <%= link_to "Ver", project_path(project), class: "text-blue-600 hover:text-blue-900", target: "_blank" %>
              <span class="text-gray-300">|</span>
              <%= link_to "Editar", edit_project_path(project), class: "text-indigo-600 hover:text-indigo-900" %>
              <span class="text-gray-300">|</span>
              <%= button_to "Apagar", project_path(project), method: :delete, form: {style: 'display:inline-block;'}, class: "text-red-600 hover:text-red-900 cursor-pointer  border-0 p-0", onclick: "return confirm('Tem certeza?');" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>