<style>
  #archway-nav {
    position: fixed !important;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
    background: rgba(10, 10, 10, 0.8) !important;
    backdrop-filter: blur(10px);
    display: flex !important;
    justify-content: space-between;
    align-items: center;
    padding: 0 40px;
    z-index: 99999 !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nav-logo {
    color: white !important;
    text-decoration: none;
    letter-spacing: 0.5em;
    text-transform: uppercase;
    font-size: 14px;
    font-weight: 300;
  }


  .burger-btn {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
    z-index: 100000;
  }

  .burger-line {
    display: block;
    width: 24px;
    height: 1px;
    background-color: white;
    margin: 6px 0;
    transition: 0.4s ease;
  }

  .burger-line.short { width: 16px; margin-left: auto; }

 
  .nav-links-desktop {
    display: flex;
    gap: 40px;
  }

  .nav-link {
    color: #888 !important;
    text-decoration: none;
    font-size: 10px;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    transition: 0.3s;
  }

  .nav-link:hover { color: #c5a367 !important; }


  #nav-overlay {
    position: fixed;
    inset: 0;
    background: #0a0a0a;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 40px;
    transform: translateY(-100%); 
    transition: 0.6s cubic-bezier(0.85, 0, 0.15, 1);
    z-index: 99998;
  }

  #nav-overlay.active { transform: translateY(0); }

  .mobile-link {
    color: white;
    text-decoration: none;
    font-size: 24px;
    font-weight: 200;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    opacity: 0;
    transition: 0.4s;
  }

  #nav-overlay.active .mobile-link { opacity: 1; transition-delay: 0.3s; }

  @media (max-width: 768px) {
    #archway-nav { padding: 0 25px; height: 70px; }
    .nav-links-desktop { display: none !important; }
    .burger-btn { display: block !important; }
  }

  /* Animação do X */
  .burger-btn.open .burger-line:first-child { transform: translateY(7px) rotate(45deg); width: 24px; }
  .burger-btn.open .burger-line:last-child { transform: translateY(-7px) rotate(-45deg); width: 24px; }
</style>

<nav id="archway-nav">
  <a href="/" class="nav-logo">
    Arch<span style="color: #c5a367;">way</span>
  </a>

  <div class="nav-links-desktop">
    <%= link_to "Home", root_path, class: "nav-link" %>
    <%= link_to "Portfolio", projects_path, class: "nav-link" %>
    <%= link_to "Studio", studio_path, class: "nav-link" %>
    <%= link_to "Contact", contact_path, class: "nav-link" %>
  </div>

  <button class="burger-btn" id="burgerToggle" onclick="toggleArchMenu()">
    <span class="burger-line"></span>
    <span class="burger-line short"></span>
  </button>
</nav>

<div id="nav-overlay">
  <%= link_to "Home", root_path, class: "mobile-link" %>
  <%= link_to "Portfolio", projects_path, class: "mobile-link" %>
  <%= link_to "Studio", studio_path, class: "mobile-link" %>
  <%= link_to "Contact", contact_path, class: "mobile-link" %>
  
  <div style="margin-top: 50px; height: 1px; width: 30px; background: #c5a367;"></div>
</div>

<script>
  function toggleArchMenu() {
    const overlay = document.getElementById('nav-overlay');
    const btn = document.getElementById('burgerToggle');
    overlay.classList.toggle('active');
    btn.classList.toggle('open');
  }


  document.querySelectorAll('.mobile-link').forEach(link => {
    link.addEventListener('click', () => {
      document.getElementById('nav-overlay').classList.remove('active');
      document.getElementById('burgerToggle').classList.remove('open');
    });
  });
</script>