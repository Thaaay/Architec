<% content_for :head do %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.css"/>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/pannellum@2.5.6/build/pannellum.js"></script>
<% end %>

<div class="bg-[#0a0a0a] min-h-screen py-12 px-6">
  <div class="max-w-7xl mx-auto mb-10">
    <%= link_to root_path, class: "group inline-flex items-center text-gray-500 hover:text-[#c5a367] transition-all" do %>
      <div class="w-10 h-10 rounded-full border border-white/10 flex items-center justify-center group-hover:border-[#c5a367] mr-4 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </div>
      <span class="text-[10px] uppercase tracking-[0.4em] font-light">Back to Home</span>
    <% end %>
  </div>

  <div class="max-w-7xl mx-auto text-center mb-12">
    <h1 class="text-4xl font-light tracking-[0.3em] text-white uppercase">
      Virtual <span class="text-[#c5a367]">Studio</span> Tour
    </h1>
    <div class="h-0.5 w-12 bg-[#c5a367] mx-auto mt-4 mb-4"></div>
  </div>

  <div class="max-w-7xl mx-auto relative group">
    <div class="relative w-full aspect-video md:h-[600px] rounded-3xl overflow-hidden border border-white/10 shadow-2xl bg-[#111]">
      <div id="panorama-studio" class="w-full h-full"></div>

      <div id="loading-overlay" class="absolute inset-0 flex items-center justify-center bg-[#0a0a0a] z-50 transition-opacity duration-700">
         <span class="text-[#c5a367] text-[10px] uppercase tracking-[0.4em] animate-pulse">Initializing 360Â° Space...</span>
      </div>
    </div>
  </div>
</div>

<script>
  function loadStudioPano() {
    const el = document.getElementById('panorama-studio');
    if (el && typeof pannellum !== 'undefined') {
      el.innerHTML = "";
      const viewer = pannellum.viewer('panorama-studio', {
        "type": "equirectangular",
        "panorama": "<%= asset_path('studio_360.webp') %>",
        "autoLoad": true,
        "autoRotate": -1,
        "showControls": true,
        "backgroundColor": [0, 0, 0]
      });

      viewer.on('load', function() {
        document.getElementById('loading-overlay').style.opacity = '0';
        setTimeout(() => {
          document.getElementById('loading-overlay').style.display = 'none';
        }, 700);
      });
    }
  }

  document.addEventListener("turbo:load", loadStudioPano);
  document.addEventListener("DOMContentLoaded", loadStudioPano);
</script>

<style>
  .pnlm-container { background: #0a0a0a !important; }
  .pnlm-load-box { display: none !important; } 
</style>