<div class="min-h-screen bg-[#1a1a1a] text-white font-sans blueprint-bg relative">
  <nav class="flex justify-between items-center px-6 md:px-16 py-6 fixed top-0 left-0 w-full z-[9999] bg-[#1a1a1a]/80 backdrop-blur-xl border-b border-white/5">
    <div class="flex flex-col">
      <span class="text-2xl font-light tracking-[0.3em] text-white uppercase leading-none">Archway</span>
      <span class="text-[9px] tracking-[0.5em] text-[#c5a367] font-bold uppercase mt-1">Design</span>
    </div>

    <div class="hidden md:flex items-center space-x-10 text-[10px] uppercase tracking-[0.2em] font-medium text-gray-300">
      <a href="projects" class="hover:text-[#c5a367] transition-colors">Projects</a>
      <a href="studio" class="hover:text-[#c5a367] transition-colors">Studio</a>
      <a href="contact" class="hover:text-[#c5a367] transition-colors">Contact</a>
      <a href="/admin" class="border border-[#c5a367]/40 px-6 py-2 rounded-full hover:bg-[#c5a367] hover:text-black transition-all duration-300">Admin</a>
    </div>
  </nav>

  <header class="relative pt-40 pb-20 px-4">
    <div class="max-w-6xl mx-auto relative group">
      <div class="swiper mySwiper rounded-3xl overflow-hidden shadow-2xl border border-white/10 h-[300px] md:h-[550px]">
        <div class="swiper-wrapper">
      
          <div class="swiper-slide relative">
             <img src="https://images.unsplash.com/photo-1600607687920-4e2a09cf159d" class="w-full h-full object-cover" alt="Interior Design">
             <div class="absolute inset-0 bg-black/30"></div>
          </div>
        </div>

        <div class="swiper-button-next !text-[#c5a367] after:!text-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="swiper-button-prev !text-[#c5a367] after:!text-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </header>

 <div class="max-w-4xl w-full mx-auto -mt-16 relative z-[50] px-4">
  <div class="bg-[#0f2420] px-10 py-8 rounded-2xl flex flex-col md:flex-row justify-between items-center gap-6 shadow-[0_20px_50px_rgba(0,0,0,0.6)] border border-white/10">
    <h2 class="text-base md:text-lg font-light tracking-[0.2em] text-gray-200 uppercase text-center md:text-left">Build your vision into reality</h2>
    <%= link_to "Start Your Project Today", contact_path,
        class: "bg-[#52f094] text-[#0f2420] px-8 py-4 rounded-xl font-bold text-xs hover:brightness-110 transition shadow-[0_0_30px_rgba(82,240,148,0.2)] whitespace-nowrap uppercase tracking-widest inline-block text-center" %>
  </div>
</div>

<div class="max-w-7xl mx-auto px-6 py-12">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: "group relative block bg-[#111] rounded-lg overflow-hidden border border-white/5 h-[400px]" do %>
        
        <div class="w-full h-full">
          <% if project.images.attached? %>
            <%= image_tag project.images, class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center text-zinc-800 text-[10px] uppercase tracking-widest">
              No Preview
            </div>
          <% end %>
        </div>

        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-80 group-hover:opacity-100 transition-opacity flex flex-col justify-end p-6">
          <p class="text-[#c5a367] text-[10px] uppercase tracking-[0.3em] font-bold mb-1">Architecture</p>
          <h3 class="text-white text-xl font-light uppercase tracking-wider"><%= project.title %></h3>
        </div>

      <% end %>
    <% end %>
  </div>
</div>

</div>

<style>
  .blueprint-bg {
    background-image:
      linear-gradient(rgba(197, 163, 103, 0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(197, 163, 103, 0.04) 1px, transparent 1px);
    background-size: 60px 60px;
    background-attachment: fixed;
  }

  .swiper-pagination-bullet { background: white !important; opacity: 0.5; }
  .swiper-pagination-bullet-active { background: #c5a367 !important; opacity: 1; }

  .swiper { width: 100%; height: 100%; }
</style>
<script>
  function initHomeSwiper() {

    const swiperEl = document.querySelector('.swiper');
    

    if (swiperEl && typeof Swiper !== 'undefined') {
      new Swiper('.swiper', {
        loop: true,
        autoplay: { delay: 5000 },
        pagination: { el: '.swiper-pagination', clickable: true },
        navigation: { nextEl: '.swiper-button-next', prevEl: '.swiper-button-prev' },
      });
      console.log("Swiper inicializado!");
    } else if (swiperEl) {

      setTimeout(initHomeSwiper, 100);
    }
  }

  document.addEventListener("turbo:load", initHomeSwiper);
  

  document.addEventListener("DOMContentLoaded", initHomeSwiper);
</script>
