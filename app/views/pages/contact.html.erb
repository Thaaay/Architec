<div class="bg-[#1a1a1a] min-h-screen py-12 px-6 flex flex-col items-center blueprint-bg text-white">

  <div class="max-w-7xl w-full mx-auto mb-10">
    <div class="mb-8">
      <%= link_to root_path, class: "group inline-flex items-center text-gray-500 hover:text-[#c5a367] transition-all duration-300" do %>
        <div class="w-10 h-10 rounded-full border border-white/10 flex items-center justify-center group-hover:border-[#c5a367] mr-4 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </div>
        <span class="text-[10px] uppercase tracking-[0.4em] font-light">Back to Home</span>
      <% end %>
    </div>

    <% if flash[:notice] %>
      <div class="bg-green-500/20 border border-green-500 text-green-200 p-4 rounded-xl text-sm text-center tracking-widest uppercase mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </div>

  <div class="max-w-7xl mx-auto w-full grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">

    <div class="flex flex-col">
      <h1 class="text-5xl md:text-6xl font-light tracking-tighter text-white mb-6">
        Let's build your <span class="text-[#c5a367]">legacy</span>.
      </h1>
      <p class="text-gray-400 font-light mb-12 text-lg leading-relaxed max-w-md">
        Tell us about your vision. We combine technical precision with artistic soul to create spaces that inspire.
      </p>

      <%= form_with url: contact_submissions_path, method: :post, scope: :contact, local: true, class: "space-y-10" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          <div class="group">
            <%= form.label :name, "Name", class: "block text-[10px] font-bold text-gray-500 uppercase tracking-widest mb-2 group-focus-within:text-[#c5a367] transition-colors" %>
            <%= form.text_field :name, class: "w-full bg-transparent border-b border-white/10 py-2 text-white focus:outline-none focus:border-[#c5a367] transition-colors duration-300 placeholder-gray-700", placeholder: "Full Name" %>
          </div>
          <div class="group">
            <%= form.label :email, "Email", class: "block text-[10px] font-bold text-gray-500 uppercase tracking-widest mb-2 group-focus-within:text-[#c5a367] transition-colors" %>
            <%= form.email_field :email, class: "w-full bg-transparent border-b border-white/10 py-2 text-white focus:outline-none focus:border-[#c5a367] transition-colors duration-300 placeholder-gray-700", placeholder: "Email address" %>
          </div>
        </div>

        <div class="group">
          <%= form.label :message, "The Project", class: "block text-[10px] font-bold text-gray-500 uppercase tracking-widest mb-2 group-focus-within:text-[#c5a367] transition-colors" %>
          <%= form.text_area :message, rows: 4, class: "w-full bg-transparent border-b border-white/10 py-2 text-white focus:outline-none focus:border-[#c5a367] transition-colors duration-300 resize-none placeholder-gray-700", placeholder: "Tell us what you're imagining..." %>
        </div>

        <div>
          <%= form.submit "Start the journey", class: "cursor-pointer px-12 py-5 bg-[#c5a367] text-black text-[10px] font-bold tracking-[0.3em] uppercase rounded-full hover:bg-white transition-all duration-500 shadow-2xl hover:scale-105" %>
        </div>
      <% end %>
    </div>

    <div class="relative h-[70vh] lg:h-[85vh] w-full rounded-2xl overflow-hidden group">
      <img
        src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=2070&auto=format&fit=crop"
        alt="Modern Luxury Architecture"
        class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
      >
      <div class="absolute inset-0 bg-gradient-to-t from-[#1a1a1a] via-transparent to-transparent opacity-60"></div>

      <div class="absolute bottom-10 left-10 border-l-2 border-[#c5a367] pl-6">
        <span class="block text-white text-xl font-light italic">"Design is not just what it looks like, it's how it works."</span>
        <span class="block text-gray-400 text-[10px] uppercase tracking-widest mt-2">Steve Jobs</span>
      </div>
    </div>

  </div>
</div>