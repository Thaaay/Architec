<div class="bg-[#0a0a0a] min-h-screen flex items-center justify-center px-6">
  <div class="max-w-md w-full">
    <div class="text-center mb-10">
      <h1 class="text-2xl tracking-[0.5em] font-light uppercase text-white">
        Arch<span class="text-[#c5a367]">way</span>
      </h1>
      <p class="text-[10px] uppercase tracking-widest text-gray-500 mt-4 italic">Private Access Portal</p>
    </div>

    <%= form_with url: login_path, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :username, "Identity", class: "block text-[10px] uppercase tracking-widest text-gray-500 mb-2" %>
        <%= f.text_field :username, class: "w-full bg-transparent border border-white/10 rounded-none py-3 px-4 text-white focus:outline-none focus:border-[#c5a367] transition-colors" %>
      </div>

      <div>
        <%= f.label :password, "Key Code", class: "block text-[10px] uppercase tracking-widest text-gray-500 mb-2" %>
        <%= f.password_field :password, class: "w-full bg-transparent border border-white/10 rounded-none py-3 px-4 text-white focus:outline-none focus:border-[#c5a367] transition-colors" %>
      </div>

      <div class="pt-4">
        <%= f.submit "Authorize", class: "w-full py-4 bg-[#c5a367] text-black text-[10px] font-bold uppercase tracking-[0.3em] cursor-pointer hover:bg-white transition-all duration-500" %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <p class="text-red-500 text-[10px] uppercase text-center mt-6 tracking-widest animate-pulse"><%= flash[:alert] %></p>
    <% end %>
    
    <%= link_to "â† Back to Public Site", root_path, class: "block text-center mt-12 text-[9px] text-gray-700 uppercase tracking-widest hover:text-gray-400 transition" %>
  </div>
</div>